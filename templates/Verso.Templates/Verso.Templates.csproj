<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageType>Template</PackageType>
    <PackageId>Verso.Templates</PackageId>
    <Title>Verso Templates</Title>
    <Description>Project templates for building Verso extensions.</Description>
    <TargetFramework>net8.0</TargetFramework>
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
    <NoDefaultExcludes>true</NoDefaultExcludes>
    <NoWarn>$(NoWarn);NU5128</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\Verso.Extension.Template\**\*" Exclude="..\Verso.Extension.Template\**\bin\**;..\Verso.Extension.Template\**\obj\**" />
    <Compile Remove="**\*" />
  </ItemGroup>

</Project>
