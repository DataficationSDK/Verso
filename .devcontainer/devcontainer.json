{
  "name": "Verso",
  "image": "mcr.microsoft.com/devcontainers/dotnet:8.0",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postAttachCommand": "code --install-extension vscode/verso-notebook-0.5.0.vsix --force && code samples/sample.verso",
  "customizations": {
    "vscode": {
      "settings": {
        "verso.hostPath": "${containerWorkspaceFolder}/src/Verso.Host/bin/Debug/net8.0/Verso.Host.dll"
      }
    }
  }
}
