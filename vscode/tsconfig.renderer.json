{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2022", "DOM"],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "declaration": false
  },
  "include": ["src/renderers/**/*.ts"],
  "exclude": ["node_modules", "dist", "out"]
}
