{
  "name": "verso-notebook",
  "displayName": "Verso Notebook",
  "description": "VS Code extension for Verso .NET notebooks",
  "version": "1.0.0",
  "publisher": "datafication",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/DataficationSDK/Verso"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Notebooks"
  ],
  "activationEvents": [
    "onCustomEditor:verso.blazorNotebook"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "verso.blazorNotebook",
        "displayName": "Verso Notebook",
        "selector": [
          {
            "filenamePattern": "*.verso"
          },
          {
            "filenamePattern": "*.ipynb"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
      "title": "Verso Notebook",
      "properties": {
        "verso.hostPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Verso.Host.dll. If empty, uses bundled host."
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.mjs",
    "build:host": "dotnet build ../src/Verso.Host -c Release",
    "build:wasm": "dotnet publish ../src/Verso.Blazor.Wasm -c Release -o blazor-wasm",
    "build:all": "npm run build:host && npm run build:wasm && npm run build",
    "watch": "node esbuild.mjs --watch",
    "lint": "tsc --noEmit",
    "pretest": "tsc -p ./tsconfig.test.json",
    "test": "node ./out-test/test/runTest.js",
    "package": "npm run build:all && vsce package --skip-license"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.21.0",
    "glob": "^10.3.10",
    "mocha": "^10.4.0",
    "typescript": "^5.4.0"
  }
}
